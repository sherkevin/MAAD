{
  "experiment_name": "多智能体协同异常检测服务器实验",
  "timestamp": "2024-09-19",
  "description": "在GPU服务器上运行的大规模实验配置",
  
  "gpu_config": {
    "enable_gpu": true,
    "gpu_memory_fraction": 0.8,
    "allow_growth": true,
    "device_preference": "cuda"
  },
  
  "multi_agent_experiment": {
    "num_samples": 10000,
    "batch_size": 64,
    "data_shapes": [
      [1, 3, 64, 64],
      [1, 3, 128, 128],
      [1, 3, 256, 256]
    ],
    "agent_config": {
      "trend_agent": {
        "trend_analyzer": {"smoothing_factor": 0.1},
        "physics": {"smoothness_weight": 0.1},
        "anomaly_detector": {"threshold": 0.5}
      }
    }
  },
  
  "communication_experiment": {
    "num_communication_rounds": 1000,
    "communication_config": {
      "max_communication_rounds": 5,
      "communication_threshold": 0.7,
      "adaptation_rate": 0.1
    },
    "agent_scenarios": [
      {"trend": 0.6, "seasonal": 0.8, "residual": 0.7},
      {"trend": 0.3, "seasonal": 0.9, "residual": 0.5},
      {"trend": 0.8, "seasonal": 0.4, "residual": 0.6}
    ]
  },
  
  "privacy_experiment": {
    "num_privacy_operations": 5000,
    "privacy_data_size": 200,
    "privacy_config": {
      "epsilon": 1.0,
      "delta": 1e-5,
      "mechanism": "gaussian",
      "sensitivity": 1.0
    },
    "test_mechanisms": ["laplace", "gaussian", "exponential"]
  },
  
  "federated_learning_experiment": {
    "federated_config": {
      "num_clients": 10,
      "num_rounds": 50,
      "local_epochs": 10,
      "learning_rate": 0.01,
      "aggregation_method": "fedavg",
      "client_selection_ratio": 0.8
    },
    "privacy_config": {
      "epsilon": 2.0,
      "delta": 1e-5,
      "mechanism": "gaussian",
      "sensitivity": 1.0
    },
    "data_distribution": {
      "iid": true,
      "data_skew": 0.1,
      "samples_per_client": 1000
    }
  },
  
  "performance_benchmarks": {
    "target_throughput": 1000,
    "target_latency": 0.1,
    "target_memory_usage": "8GB",
    "target_gpu_utilization": 0.8
  },
  
  "monitoring": {
    "enable_profiling": true,
    "profile_interval": 10,
    "log_level": "INFO",
    "save_checkpoints": true,
    "checkpoint_interval": 100
  },
  
  "output_config": {
    "save_results": true,
    "save_models": true,
    "save_logs": true,
    "output_directory": "server_experiment_outputs",
    "result_format": "json"
  },
  
  "error_handling": {
    "max_retries": 3,
    "retry_delay": 5,
    "enable_graceful_degradation": true,
    "timeout_seconds": 300
  },
  
  "scaling_tests": {
    "client_scaling": [5, 10, 20, 50],
    "data_scaling": [1000, 5000, 10000, 50000],
    "gpu_scaling": [1, 2, 4, 8]
  }
}
